<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin>
  <name>Trace Viewer Plugin</name>
  <description>View traces files with highlighting</description>
  <version>1.0</version>
  <vendor>Alcatel-Lucent</vendor>
  <idea-version since-build="3000"/>
  <application-components>
    <component>
      <option name="workspace" value="true" />
      <implementation-class>com.nortel.oam.traceviewer.ideaplugin.TraceViewerComponent</implementation-class>
    </component>
  </application-components>
  <actions>
    <action id="TraceViewerAction" class="com.nortel.oam.traceviewer.ideaplugin.TraceViewerAction" text="Trace Viewer"
            description="View traces files">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>